<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bm.it.mobile.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UserApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="bm.it.mobile.sample.features.main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bm.it.mobile.sample.features.koin.view.UserActivity"
            android:label="@string/button1" />
        <activity
            android:name="bm.it.mobile.sample.features.retrofit.view.RestActivity"
            android:label="@string/button4" />
        <activity
            android:name="bm.it.mobile.sample.features.courotines.view.CoroutinesActivity"
            android:label="@string/button2" />
    </application>

</manifest>